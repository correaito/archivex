<div class="container col-md-5">

<div class="card bg-dark mb-3">
  <div class="card-header" style="color: white">
   Editar Arquivo
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">

	<form action="/usuarios/atualiza_arquivo" method="POST">
		<div class="form-group">
			<label for="numero">Número</label>
			<input type="text" name="numero" class="form-control" id="numero" value="{{numero}}" readonly>
		</div>
        <div class="form-group">
			<label for="endereco">Endereço</label>
			<input type="text" name="endereco" class="form-control" id="endereco" value="{{endereco}}" readonly>
		</div>
		<div class="form-group">
			<label for="tipo">Tipo</label>
			<select name="tipo" class="form-control" id="tipo">
				{{#each tipo_bd}}
                <option value="{{nome}}" 
				{{#ifId nome ../tipo}} 
				selected
				 {{/ifId}}>
				{{nome}}</option>
				{{else}}
				<option value="">Nenhum tipo registrado</option>
				{{/each}}
			</select>
		</div>
		<div class="form-group">
			<label for="conteudo">Conteúdo</label>
			<textarea name="conteudo" class="form-control" id="conteudo" placeholder="Digite o conteúdo">{{conteudo}}</textarea>
		</div>
		<div class="form-group">
			<label for="situacao">Situação</label>
			<select name="situacao" class="form-control" id="situacao">
                {{#each situacao_bd}}
                <option value="{{nome}}"
                {{#ifId nome ../situacao}}
                selected
                {{/ifId}}>{{nome}}</option>
                {{/each}}
			</select>
		</div>
		<button type="button" class="btn btn-success" onclick="goBack()"><i class="fa-solid fa-rotate-left"></i> Voltar</button>
		<button type="submit" class="btn btn-primary"><i class="fa-regular fa-floppy-disk"></i> Gravar</button>
	</form>
</div>
 
</li>
  </ul>
</div>




